<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="108dp"
            android:text="Login Via OTP"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_login_via_otp_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Enter your Matrimony ID/ Registered Mobile Number to receive the OTP"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@id/tv_forgot_password"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="89dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_id_or_mobile"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="32dp"
            android:hint="ID / Mobile No."
            app:layout_constraintTop_toBottomOf="@id/tv_login_via_otp_desc">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_id_or_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:maxLength="20"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="157dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_send_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="64dp"
            android:backgroundTint="@color/blue"
            android:text="Submit"
            app:layout_constraintTop_toBottomOf="@id/til_id_or_mobile"
            tools:layout_editor_absoluteX="32dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>