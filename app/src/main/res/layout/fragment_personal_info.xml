<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_personal_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="Personal Information"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/img_btn_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_edit_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_about_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="About Me"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_personal_info" />

            <TextView
                android:id="@+id/tv_about_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/background_rectangle_round_cornered"
                android:enabled="false"
                android:gravity="top|start"
                android:hint="-- Not Set -- "
                android:maxLength="250"
                android:text="@string/lorem_ipsum_short"
                android:textSize="16sp"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_about_header" />

            <TextView
                android:id="@+id/tv_basic_details_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="Basic Details"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_about_desc" />

            <RelativeLayout
                android:id="@+id/tv_basic_details_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/background_rectangle_round_cornered"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_basic_details_header">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="Name\t\t\t\t\t\t\t\t\t\t\t-"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_name_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/tv_name"
                    android:paddingStart="12dp"
                    android:text="Naruto Uzumaki"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name_value"
                    android:text="Age\t\t\t\t\t\t\t\t\t\t\t\t\t-"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_age_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name_value"
                    android:layout_toEndOf="@id/tv_name"
                    android:paddingStart="12dp"
                    android:text="21"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_dob"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_age_value"
                    android:text="DOB\t\t\t\t\t\t\t\t\t\t\t\t-"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_dob_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_age_value"
                    android:layout_toEndOf="@id/tv_name"
                    android:paddingStart="12dp"
                    android:text="12/12/2000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_height"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_dob_value"
                    android:text="Height\t\t\t\t\t\t\t\t\t\t-"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_height_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_dob_value"
                    android:layout_toEndOf="@id/tv_name"
                    android:paddingStart="12dp"
                    android:text="5 ft 4 in"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_physical_status"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_height_value"
                    android:text="Physical Status\t\t-"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_physical_status_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_height_value"
                    android:layout_toEndOf="@id/tv_name"
                    android:paddingStart="12dp"
                    android:text="Normal"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_marital_status"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_physical_status"
                    android:text="Marital Status\t\t\t-"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_marital_status_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_physical_status"
                    android:layout_toEndOf="@id/tv_name"
                    android:paddingStart="12dp"
                    android:text="Never Married"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_no_of_children"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_marital_status"
                    android:text="No. of Children\t\t\t-"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_no_of_children_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_marital_status"
                    android:layout_toEndOf="@id/tv_name"
                    android:paddingStart="12dp"
                    android:text="0"
                    android:textSize="16sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_habits_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="Habits"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_basic_details_desc" />

            <RelativeLayout
                android:id="@+id/tv_habits_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/background_rectangle_round_cornered"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_habits_header">

                <TextView
                    android:id="@+id/tv_drinking_habit"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="Drinking\t\t\t\t-"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_drinking_habit_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/tv_drinking_habit"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="Never"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_smoking_habit"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_drinking_habit_value"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="Smoking\t\t\t-"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_smoking_habit_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_drinking_habit_value"
                    android:layout_toEndOf="@id/tv_smoking_habit"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="Occasionally"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_food_type"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_smoking_habit_value"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="Food Type\t\t-"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_food_type_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_smoking_habit_value"
                    android:layout_toEndOf="@id/tv_food_type"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="Non-Vegetarian"
                    android:textSize="16sp" />


            </RelativeLayout>

            <TextView
                android:id="@+id/tv_hobbies_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="Hobbies And Interest"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_habits_desc" />

            <TextView
                android:id="@+id/tv_hobbies_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/background_rectangle_round_cornered"
                android:enabled="false"
                android:gravity="top|start"
                android:maxLength="500"
                android:text="Eating, Sleeping, Netflix"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_hobbies_header" />

            <TextView
                android:id="@+id/tv_family_details_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="Family Details"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_hobbies_desc" />

            <RelativeLayout
                android:id="@+id/tv_family_details_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/background_rectangle_round_cornered"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_family_details_header">

                <TextView
                    android:id="@+id/tv_father_name"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="Father's Name\t\t\t\t-"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_father_name_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/tv_father_name"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:hint="- Not Set -"
                    android:maxLength="500"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_mother_name"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_father_name_value"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="Mother's Name\t\t\t-"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_mother_name_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_father_name_value"
                    android:layout_toEndOf="@id/tv_mother_name"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:hint="- Not Set -"
                    android:maxLength="500"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_no_of_brothers"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_mother_name_value"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="No. of Brothers\t\t\t-"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_no_of_brothers_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_mother_name_value"
                    android:layout_toEndOf="@id/tv_no_of_brothers"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:hint="- Not Set -"
                    android:maxLength="500"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_married_brothers"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_no_of_brothers"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="Married Brothers\t\t-"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_married_brothers_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_no_of_brothers_value"
                    android:layout_toEndOf="@id/tv_married_brothers"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:hint="- Not Set -"
                    android:maxLength="500"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_no_of_sisters"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_married_brothers_value"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="No. of Sisters\t\t\t\t\t-"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_no_of_sisters_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_married_brothers_value"
                    android:layout_toEndOf="@id/tv_no_of_sisters"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:hint="- Not Set -"
                    android:maxLength="500"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_married_sisters"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_no_of_sisters"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="Married Sisters\t\t\t-"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_married_sisters_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_no_of_sisters_value"
                    android:layout_toEndOf="@id/tv_married_sisters"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:hint="- Not Set -"
                    android:maxLength="500"
                    android:textSize="16sp" />


            </RelativeLayout>


            <TextView
                android:id="@+id/tv_location_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="Location"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_family_details_desc" />

            <!--            <TextView-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:enabled="false"-->
            <!--                android:gravity="top|start"-->
            <!--                android:maxLength="500"-->
            <!--                android:text="Country -\nState -\nCity"-->
            <!--                android:textSize="16sp"-->
            <!--                />-->

            <RelativeLayout
                android:id="@+id/tv_location_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/background_rectangle_round_cornered"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_location_header">

                <TextView
                    android:id="@+id/tv_country"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="Country\t\t\t\t-"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_country_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/tv_country"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:paddingStart="12dp"
                    android:text="India"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_country_value"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="State\t\t\t\t\t\t\t-"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_state_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_country_value"
                    android:layout_toEndOf="@id/tv_state"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:paddingStart="12dp"
                    android:text="Tamilnadu"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_state_value"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="City\t\t\t\t\t\t\t\t-"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_city_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_state_value"
                    android:layout_toEndOf="@id/tv_city"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:paddingStart="12dp"
                    android:text="Madurai"
                    android:textSize="16sp" />


            </RelativeLayout>

            <TextView
                android:id="@+id/tv_contact_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="Contact"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_location_desc" />

            <TextView
                android:id="@+id/tv_contact_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/background_rectangle_round_cornered"
                android:enabled="false"
                android:gravity="top|start"
                android:maxLength="500"
                android:text="Mobile No  -  +919090******"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_contact_header" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="150dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_contact_desc" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</layout>