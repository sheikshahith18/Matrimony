<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Matrimony"
        tools:targetApi="31">

        <activity android:name=".ui.MainActivity" />
        <activity android:name=".ui.ForgotPasswordActivity" />
        <activity android:name=".ui.ResetPasswordActivity" />
        <activity android:name=".ui.EnterOtpActivity" />
        <activity android:name=".ui.SignUpActivity" />
        <activity android:name=".ui.SignUpNextPageActivity" />
        <activity android:name=".ui.LoginViaOTPActivity" />
        <activity android:name=".ui.SignInActivity" />


        <activity android:name=".DemoActivity" />

        <activity-alias
            android:name=".LaunchActivity"
            android:exported="true"
            android:targetActivity=".ui.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

    </application>

</manifest>